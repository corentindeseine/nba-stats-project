<div class="container-logs" data-controller='logs'>
  <div class="informations-card-hover">
    <div class="informations-container" data-action='mouseenter->logs#mouseEnter
                                                     mouseleave->logs#mouseLeave'
                                        data-logs-target='card'>
      <h2>Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <div class="informations-form-bottom">
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            <%= link_to "Forgot your password ?", new_password_path(resource_name), id: "pw-forgot" %>
          </div>
        </div>

        <div class="informations-btn">
          <%= f.button :submit, "Confirm" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
