<div class="container-logs" data-controller='logs'>
  <div class="informations-card-hover">
    <div class="informations-container" data-action='mouseenter->logs#mouseEnter
                                                     mouseleave->logs#mouseLeave'
                                        data-logs-target='card'>
      <h2>Forgot your password ?</h2>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
        </div>

        <div class='informations-btn'>
          <%= f.button :submit, "Reset password instructions" %>
        </div>
      <% end %>

      <div class="informations-btn">
        <%= link_to "Log in", new_session_path(resource_name) %><br />
      </div>
  </div>
</div>
